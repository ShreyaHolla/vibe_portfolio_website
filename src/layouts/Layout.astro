---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Shreya V Holla – Portfolio',
  description = 'Portfolio of Shreya V Holla – designer & developer crafting thoughtful digital experiences.',
} = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link
      href="https://api.fontshare.com/v2/css?f[]=clash-display@500&f[]=cabinet-grotesk@100,400&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="site-wrapper">
      <Header />
      <main id="main-content" class="site-main">
        <slot />
      </main>
      <Footer />
    </div>
  </body>
</html>

