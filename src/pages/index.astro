---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';
import Newsletter from '../components/Newsletter.astro';
---

<Layout
  title="Home – Shreya V Holla"
  description="Designer & developer crafting thoughtful, minimal digital experiences."
>
  <section class="section hero" aria-labelledby="hero-title">
    <div class="container hero-inner">
      <div class="hero-meta">
        <span>Portfolio</span>
        <span aria-hidden="true">•</span>
        <span>Designer & Developer</span>
      </div>

      <div>
        <p class="hero-kicker">Based in wherever-you-like</p>
        <h1 id="hero-title" class="hero-title">Designer &amp; Developer</h1>
        <p class="hero-subtitle">
          I build thoughtful digital experiences that balance clear typography,
          calm interfaces, and considered interaction.
        </p>
      </div>

      <div class="hero-actions">
        <Button href="/about">About Shreya</Button>
        <Button href="#newsletter" variant="secondary">Join the newsletter</Button>
      </div>
    </div>
  </section>

  <Newsletter id="newsletter" />
</Layout>

